<mvc:View controllerName="invoice.demoo.controller.View1"
     xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:u="sap.ui.unified" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:ui="sap.ui.table" xmlns:f="sap.ui.layout.form">
   <Shell id="shell">
		<App id="app" class="myAppDemoWT">
			<pages>
				<Page id="page" titleAlignment="Center">
					<customHeader>
						<Bar id="_IDGenBar1">
							<contentLeft>
								<Image id="_IDGenImage1" src="{logoModel>/logoSrc}" alt="Logo" height="{logoModel>/height}" width="{logoModel>/width}"/>
							</contentLeft>
							<contentMiddle>
								<FlexBox id="_IDGenFlexBox1" alignItems="Center" justifyContent="Center">
									<items>
										<Text id="_IDGenText1" text="Employee Roster Workbench - Administrator" textAlign="Center" renderWhitespace="true" class="redText"/>
									</items>
								</FlexBox>
							</contentMiddle>
                            	<contentRight>
                                 <Button id="_IDGenButton2"
      
        type="Emphasized"
        icon="sap-icon://navigation-right-arrow"
        press="onNavToSecondView" />
                                </contentRight>
						</Bar>
					</customHeader>
					<content>
						<IconTabBar id="idIconTabBarFiori21" expandable="false" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding" >
							<items>
								<IconTabFilter id="_IDGenIconTabFilter1" text="Approver Delegation" key="approverDelegation">
						  <Table id="idApproverTable" inset="false" items="{ path: 'approverDataModel>/Approvers' }" mode="MultiSelect">
        <headerToolbar>
            <OverflowToolbar id="_IDGenOverflowToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1"/>
                <Button id="_IDGenButton1" text="ADD" type="Emphasized" press="onAdd" icon="sap-icon://add"/>
            <Button text="Save" type="Emphasized" press="saveSelectedToModel" enabled="true" id="saveButton" icon="sap-icon://save"/>
			<Button text="Delete" type="Emphasized" press="onDeleteSelected" enabled="true" id="deleteButton" icon="sap-icon://delete"/>
								
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column id="_IDGenColumn1">
                <Text id="_IDGenText2" text="Employee Name"/>
            </Column>
            <Column id="_IDGenColumn2">
                <Text id="_IDGenText3" text="File Path"/>
            </Column>
            <Column id="_IDGenColumn3">
                <Text id="_IDGenText4" text="Current Date"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem id="_IDGenColumnListItem1" vAlign="Middle">
                <cells>
                    <Input id="_IDGenInput1"
                        value="{approverDataModel>employeeName}"
                        placeholder="Enter text"/>
                    <u:FileUploader id="_IDGenFileUploader1"
                        value="{approverDataModel>filePath}"
                        name="myFileUpload"
                        tooltip="Upload your file to the local server"/>
                    <DatePicker id="_IDGenDatePicker1"
                        value="{approverDataModel>currentDate}"
                        placeholder="Enter Date"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>

								</IconTabFilter>
								
							
							</items>
						</IconTabBar>
						
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
 